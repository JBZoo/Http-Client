{
    "name"              : "jbzoo/http-client",
    "type"              : "library",
    "description"       : "Simple HTTP-client, wrapper around Guzzle and rmccue/requests",
    "license"           : "MIT",
    "keywords"          : [
        "http", "https", "client", "guzzle", "guzzlehttp", "curl", "request", "requests", "rmccue"
    ],
    "authors"           : [
        {
            "name"  : "SmetDenis",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],
    "require"           : {
        "php"               : ">=7.2",
        "ext-json"          : "*",
        "ext-simplexml"     : "*",

        "jbzoo/data"        : "4.0.x-dev",
        "guzzlehttp/guzzle" : "^6.4"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev" : "1.1.x-dev",
        "jbzoo/utils"       : "4.0.x-dev",
        "rmccue/requests"   : "^1.7"
    },

    "suggest"           : {
        "rmccue/requests" : "Only if you can't use guzzle guzzlehttp/guzzle^6.4"
    },

    "autoload"          : {
        "psr-4" : {
            "JBZoo\\HttpClient\\" : "src"
        }
    },

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "autoload-dev"      : {
        "classmap" : ["tests"]
    },

    "config"            : {
        "optimize-autoloader" : true
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "3.0.x-dev"
        }
    }
}
